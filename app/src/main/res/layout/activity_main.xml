<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:background="@drawable/wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/name_field_background"
            android:id="@+id/button_name_field"
            android:text="@string/name_field_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/name_field_margin_top"
            android:paddingLeft="@dimen/name_field_padding_left"
            android:paddingRight="@dimen/name_field_padding_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/field1_background"
            android:id="@+id/text_field1"
            android:layout_marginTop="@dimen/field1_margin_top"
            android:text="@string/field1_text"
            android:layout_below="@id/button_name_field"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/field1_padding_left"
            android:paddingRight="@dimen/field1_padding_right"
            android:paddingTop="@dimen/field1_padding_top"
            android:paddingBottom="@dimen/field1_padding_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/field2_background"
            android:id="@+id/text_field2"
            android:text="@string/field2_text"
            android:layout_marginTop="@dimen/field2_margin_top"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_field1"
            android:paddingLeft="@dimen/field2_padding_left"
            android:paddingRight="@dimen/field2_padding_right"
            android:paddingTop="@dimen/field2_padding_top"
            android:paddingBottom="@dimen/field2_padding_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/field3_background"
            android:id="@+id/text_field3"
            android:text="@string/field3_text"
            android:layout_marginTop="@dimen/field3_margin_top"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_field2"
            android:paddingLeft="@dimen/field3_padding_left"
            android:paddingRight="@dimen/field3_padding_right"
            android:paddingTop="@dimen/field3_padding_top"
            android:paddingBottom="@dimen/field3_padding_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/message"
            android:padding="@dimen/message_padding"
            android:id="@+id/text_long_story"
            android:text="@string/message_text"
            android:layout_marginTop="@dimen/message_margin_top"
            android:layout_below="@id/text_field3"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="@drawable/layer_list"
            android:padding="@dimen/layer_list_padding"
            android:layout_marginTop="@dimen/layer_list_margin_top"
            android:layout_marginBottom="@dimen/layer_list_margin_bottom"
            android:layout_below="@id/text_long_story"
            android:layout_width="@dimen/layer_list_width"
            android:layout_height="@dimen/layer_list_height"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>

